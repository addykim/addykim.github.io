<label class="col-sm-2 control-label">Title</label>
<div class="col-sm-10">
  {{input 
    type='text' 
    value=model.title
    placeholder='Title'
    size='80'
  }}
</div>
<label class="col-sm-2 control-label">Description</label>
<div class="col-sm-10">
  {{textarea
    type='text'
    value=model.description
    placeholder='Description'
    cols='80'
    rows='10'
  }}
</div>
<label class="col-sm-2 control-label">Thumbnail Url</label>
<div>
  {{input
    type='text'
    value=model.thumbnailUrl
    size='80'
  }}
</div>
<button type="submit" class="btn btn-default" {{action 'saveProject' model}}>
  Save Edit
</button>